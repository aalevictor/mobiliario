# Configurações de Banco de Dados MySQL (adapte conforme sua configuração)
DATABASE_URL="mysql://username:password@localhost:3306/moburb_database"
DIRECT_URL="mysql://username:password@localhost:3306/moburb_database"

# Chave secreta para autenticação (gere uma nova chave segura)
AUTH_SECRET="sua_chave_secreta_aqui_substitua_por_uma_chave_mais_segura"

# Configurações de Email - usando sendmail local
EMAIL_FROM="naoresponda-mobiliariourbano@spurbanismo.sp.gov.br"
MAIL_BCC="equipe-admin@spurbanismo.sp.gov.br"
MAIL_ADMIN="dev-admin@spurbanismo.sp.gov.br"

# URL base da aplicação
NEXT_PUBLIC_APP_URL="https://concursomoburb.prefeitura.sp.gov.br"

# Configuração para usar sendmail local
ENVIRONMENT="production"

# Configurações específicas para CentOS 7
PRISMA_CLI_BINARY_TARGETS="rhel-openssl-1.0.x,native"

# Configurações do Node.js
NODE_ENV="production"
PORT="3500"
HOSTNAME="0.0.0.0"

# Configurações de logging
LOG_LEVEL="info"
LOG_FILE="/app/logs/application.log"
