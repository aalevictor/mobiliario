# Configuração para desenvolvimento local com Docker
# Banco de dados MySQL no container (porta interna sempre 3306)
DATABASE_URL="mysql://moburb_user:moburb123@mysql-local:3306/moburb_local"
DIRECT_URL="mysql://moburb_user:moburb123@mysql-local:3306/moburb_local"

# Chave secreta para desenvolvimento (não usar em produção)
AUTH_SECRET="dev_secret_key_for_local_testing_only_do_not_use_in_production"

# Configurações de Email para desenvolvimento local (simulado)
MAIL_FROM="naoresponda-mobiliariourbano@spurbanismo.sp.gov.br"
MAIL_BCC="teste-admin@spurbanismo.sp.gov.br"
MAIL_ADMIN="dev-admin@spurbanismo.sp.gov.br"

# URL base da aplicação local
NEXT_PUBLIC_APP_URL="http://localhost:3500"

# Configuração para ambiente local
ENVIRONMENT="local"

# Configurações do Node.js
NODE_ENV="development"
PORT="3500"
HOSTNAME="0.0.0.0"

# Configurações de logging
LOG_LEVEL="debug"
LOG_FILE="/app/logs/application.log"

# Desabilita verificações de SSL para desenvolvimento
NODE_TLS_REJECT_UNAUTHORIZED="0"
